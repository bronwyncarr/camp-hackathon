<%= render partial: "shared/nav" %>
<h2>Favourite Spots</h2>
<div class ='spots-containter'>
  <% if @spots %>
    <% @spots.each do |spot| %>
      <div class="card" style="width: 18rem;">
        <% if spot.photo.attached? == true %>
          <%= image_tag spot.photo, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= spot.name %></h5>
          <%= render 'shared/address', spot: spot %>
