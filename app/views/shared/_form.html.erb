  <%= simple_form_for @spot do |f| %>
    <%= f.simple_fields_for :address, Address.new do |a| %>
      <%= a.input :street_number %>
      <%= a.input :street_name %>
      <%= a.input :postcode %>
      <%= a.input :state %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :max_campers, as: :integer %>
    <%= f.input :has_power, as: :boolean, boolean_style: :inline %>
    <%= f.input :has_water, as: :boolean, boolean_style: :inline %>
    <%= f.input :has_toilet, as: :boolean, boolean_style: :inline %>
    <%= f.input :has_shower, as: :boolean, boolean_style: :inline %>
    <%= f.file_field :photo, accept: "photo/png, photo/jpg, photo/jpeg"%>
    <br><br>
      <%= f.button :submit, class: "btn show-btn btn-secondary" %>

  <% end %>
